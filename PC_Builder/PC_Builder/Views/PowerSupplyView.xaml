<UserControl x:Class="PC_Builder.Views.PowerSupplyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PC_Builder.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Opacity="0.9">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,5">
                    <GradientStop Color="#23262B" Offset="0.0"/>
                    <GradientStop Color="#404D5B" Offset="0.4"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <DataGrid x:Name="DGrid" ItemsSource="{Binding Supplies}" AutoGenerateColumns="False" ColumnHeaderStyle="{StaticResource GridHeaderStyle}" BorderBrush="#23262B">
            <DataGrid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,5">
                    <GradientStop Color="#23262B" Offset="0.0"/>
                    <GradientStop Color="#404D5B" Offset="0.4"/>
                </LinearGradientBrush>
            </DataGrid.Background>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" CellStyle="{StaticResource GridCellStyle}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" CellStyle="{StaticResource GridCellStyle}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Efficiency Rating" Binding="{Binding Efficiency_Rating}" CellStyle="{StaticResource GridCellStyle}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Wattage" Binding="{Binding Wattage}" CellStyle="{StaticResource GridCellStyle}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Modularity" Binding="{Binding Modularity}" CellStyle="{StaticResource GridCellStyle}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" CellStyle="{StaticResource GridCellStyle}" IsReadOnly="True" Width="*"/>
                <DataGridTemplateColumn CellStyle="{StaticResource GridCellStyle}" IsReadOnly="True" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button x:Name="BtnOpen" Command="{Binding DataContext.SelectViewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource GridDetailsButtonStyle}" Content="More details" Cursor="Hand">
                                    <Button.CommandParameter>
                                        <MultiBinding Converter="{StaticResource TupleConverter}">
                                            <Binding Path="ID"/>
                                            <Binding Source="Supplies"/>
                                        </MultiBinding>
                                    </Button.CommandParameter>
                                </Button>
                                <Button x:Name="BtnSelect" Style="{StaticResource GridSelectButtonStyle}" Content="Select" Cursor="Hand"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
